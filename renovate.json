{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "assignees": ["coutug"],
  "enabledManagers": ["helm-values", "helmv3", "regex"],
  "regexManagers": [
    {
      "datasourceTemplate": "docker",
      "fileMatch": ["^charts/.*/Chart\\.yaml$"],
      "matchStrings": [
        "appVersion: '(?<currentValue>.*?)'\\s+",
        "version: '(?<currentValue>.*?)'\\s+"
      ]
    }
  ]
}
