{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "baseBranches": ["test/helm-renovate"],
  "assignees": ["coutug"],
  "regexManagers":
  [
    {
      "commitMessageTopic": "helm chart {{depName}}",
      "fileMatch": [
        "(^|/)Chart\\.ya?ml$"
      ],
      "matchStrings": [
        "appVersion: '(?<currentValue>.*?)'\\s+",
        "version: '(?<currentValue>.*?)'\\s+"
      ],
      "datasourceTemplate": "docker"
    }
  ]
}
